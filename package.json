{
    "name": "motiongenesistest",
    "displayName": "MotionGenesis Language",
    "description": "MotionGenesis Language",
    "version": "0.0.1",
    "publisher": "EtienneTetreault",
    "engines": {
        "vscode": "^1.26.0"
    },
    "categories": [
        "Programming Languages"    ],
    "activationEvents": [
        "onCommand:extension.sayHello"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.sayHello",
                "title": "Hello World"
            }
        ],
        "languages": [{
            "id": "motiongenesis",
            "aliases": ["MotionGenesis", "motiongenesis"],
            "extensions": [".txt",".al"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "motiongenesis",
            "scopeName": "source.motiongenesis",
            "path": "./syntaxes/motiongenesis.plist"
        }]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
